<Window
    x:Class="ExpenseTracker.Views.AddCategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="clr-namespace:ExpenseTracker.ViewModels"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Add Category"
    Width="400"
    Height="400"
    Background="#FF1E1E1E"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel
            Width="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="Add Category" />

            <!--  Category Name  -->
            <TextBlock
                FontSize="14"
                Foreground="White"
                Text="Category Name" />
            <TextBox
                Height="30"
                Margin="0,0,0,10"
                Background="#333"
                BorderBrush="#555"
                Foreground="White"
                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Color Picker  -->
            <TextBlock
                FontSize="14"
                Foreground="White"
                Text="Color" />
            <xctk:ColorPicker
                Height="30"
                Margin="0,0,0,10"
                Background="#333"
                BorderBrush="#555"
                Foreground="White"
                SelectedColor="{Binding SelectedColor, Mode=TwoWay}" />

            <!--  Type  -->
            <TextBlock
                FontSize="14"
                Foreground="White"
                Text="Type" />

            <!--  Radio Buttons for Expense and Income  -->
            <StackPanel Margin="0,5,0,20" Orientation="Horizontal">
                <RadioButton
                    Margin="0,0,30,0"
                    Background="#333"
                    BorderBrush="#555"
                    Content="Expense"
                    FontSize="14"
                    Foreground="White"
                    GroupName="CategoryType"
                    IsChecked="{Binding IsExpense}" />
                <RadioButton
                    Background="#333"
                    BorderBrush="#555"
                    Content="Income"
                    FontSize="14"
                    Foreground="White"
                    GroupName="CategoryType"
                    IsChecked="{Binding IsIncome}" />
            </StackPanel>

            <!--  Buttons  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="35"
                    Background="#007ACC"
                    Command="{Binding SaveCategoryCommand}"
                    Content="Save"
                    FontWeight="Bold"
                    Foreground="White"
                    IsDefault="True" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
