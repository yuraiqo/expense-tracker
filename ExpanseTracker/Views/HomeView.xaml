<UserControl
    x:Class="ExpenseTracker.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    Background="#FF1E1E1E"
    FontFamily="Segoe UI"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9C" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF4A4A4A" />
                                <Setter Property="Foreground" Value="#FF888888" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="SecondaryButton"
            BasedOn="{StaticResource PrimaryButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="BorderBrush" Value="#555555" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#454545" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF4A4A4A" />
                                <Setter Property="Foreground" Value="#FF888888" />
                                <Setter Property="BorderBrush" Value="#FF4A4A4A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#FF2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#FF4A4A4A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalGridLinesBrush" Value="#FF4A4A4A" />
            <Setter Property="VerticalGridLinesBrush" Value="#FF4A4A4A" />
            <Setter Property="RowBackground" Value="#FF2D2D30" />
            <Setter Property="AlternatingRowBackground" Value="#FF37373C" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="GridLinesVisibility" Value="All" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF3E3E42" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="BorderBrush" Value="#FF4A4A4A" />
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="BorderBrush" Value="#FF4A4A4A" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#FF2D2D30" />
            <Setter Property="Foreground" Value="#FF686868" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Background="#FF252526"
            BorderBrush="#FF3E3E42"
            BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20">
                    <TextBlock
                        Margin="0"
                        FontSize="16"
                        Foreground="#FFAAAAAA"
                        Text="Welcome," />
                    <TextBlock
                        x:Name="UsernameTextBlock"
                        Margin="0,0,0,20"
                        FontSize="24"
                        FontWeight="SemiBold"
                        Text="{Binding Username, FallbackValue='User Name'}" />

                    <Border
                        Margin="0,0,0,10"
                        Padding="15"
                        Background="#FF333333"
                        CornerRadius="3">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="#FFAAAAAA"
                                Text="Amount Spent (This Month):" />
                            <TextBlock
                                x:Name="AmountSpentTextBlock"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="#FFE57373"
                                Text="{Binding SpentThisMonth, StringFormat={}{0:C}, FallbackValue='$0.00'}" />
                        </StackPanel>
                    </Border>

                    <Border
                        Padding="15"
                        Background="#FF333333"
                        CornerRadius="3">
                        <StackPanel>
                            <TextBlock
                                FontSize="14"
                                Foreground="#FFAAAAAA"
                                Text="Income (This Month):" />
                            <TextBlock
                                x:Name="IncomeTextBlock"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="#FF81C784"
                                Text="{Binding IncomeThisMonth, StringFormat={}{0:C}, FallbackValue='$0.00'}" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Button
                    Grid.Row="2"
                    Margin="20"
                    VerticalAlignment="Bottom"
                    Command="{Binding LogoutCommand}"
                    Content="Logout"
                    Style="{StaticResource SecondaryButton}" />
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Margin="0,10,0,20"
                Orientation="Horizontal">
                <Button
                    Command="{Binding OpenAddTransactionCommand}"
                    Content="Add Transaction"
                    Style="{StaticResource PrimaryButton}" />
                <Button
                    Command="{Binding OpenAddCategoryCommand}"
                    Content="Add Category"
                    Style="{StaticResource PrimaryButton}" />
                <Button
                    Margin="10,5,5,5"
                    HorizontalAlignment="Right"
                    Command="{Binding ExportDataCommand}"
                    Content="Export Data"
                    Style="{StaticResource SecondaryButton}" />
            </StackPanel>

            <DataGrid
                x:Name="TransactionsDataGrid"
                Grid.Row="1"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Transactions}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Category.Name}"
                        Header="Category" />
                    <DataGridTemplateColumn Width="*" Header="Color">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="{Binding Category.Color}"
                                    BorderBrush="White"
                                    BorderThickness="1"
                                    CornerRadius="3" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Category.Type}"
                        Header="Type" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}"
                        Header="Date" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Amount, StringFormat={}{0:C}}"
                        Header="Amount">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
